<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/k1"
    tools:context=".ui.Contact.ContactFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/contact_text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:fontFamily="cursive"
        android:text="We'd Love to Hear From You"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="32sp" />
        <TextView
            android:id="@+id/txtline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@+id/contact_text_home"
            android:text="Please use the contact form on the right side if you have any questions or requests,concerning our services.We will respond to your message within 24 hours"
            android:textSize="18sp" />
        <androidx.cardview.widget.CardView
            android:id="@+id/fbcard"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="16dp"
            android:layout_below="@+id/txtline"
            app:cardElevation="90dp"
            app:cardCornerRadius="90dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txtline"
                android:src="@drawable/fb" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/instacard"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/fbcard"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/txtline"
            app:cardElevation="90dp"
            app:cardCornerRadius="90dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txtline"
                android:src="@drawable/instagram" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/twittercard"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/instacard"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/txtline"
            app:cardElevation="90dp"
            app:cardCornerRadius="90dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txtline"
                android:src="@drawable/twitter" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/linkedincard"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/twittercard"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/txtline"
            app:cardElevation="90dp"
            app:cardCornerRadius="90dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txtline"
                android:src="@drawable/injpg" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/whatsappcard"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:layout_toRightOf="@+id/linkedincard"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/txtline"
            app:cardElevation="90dp"
            app:cardCornerRadius="90dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/txtline"
                android:src="@drawable/whatsapp" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imgmapbhopal"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_below="@+id/whatsappcard"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="10dp"
            android:src="@drawable/map" />

        <androidx.cardview.widget.CardView
                android:id="@+id/locationcard"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardElevation="0dp"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/imgmapbhopal"
                app:cardCornerRadius="8dp"
                android:layout_marginHorizontal="15dp">
                <ImageView
                    android:id="@+id/imgmap"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/map2"/>
                <TextView
                    android:id="@+id/txtlocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location:"
                    android:layout_marginTop="17dp"
                    android:layout_marginLeft="105dp"
                    android:textSize="22sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:textColor="@color/black" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bhopal,Madhya Pradesh"
                    android:layout_marginTop="52dp"
                    android:layout_marginLeft="105dp"
                    android:textSize="18sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>
            </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/emailcard"
            android:layout_width="225dp"
            android:layout_height="90dp"
            app:cardElevation="0dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/locationcard"
            app:cardCornerRadius="8dp"
            android:layout_marginLeft="15dp">
            <ImageView
                android:id="@+id/imggmail"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/gmail"/>
            <TextView
                android:id="@+id/txtemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mail:"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="55dp"
                android:textSize="22sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="info@farmersportal.com"
                android:layout_marginTop="48dp"
                android:layout_marginLeft="55dp"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:textStyle="bold"
                android:textColor="@color/black"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/callcard"
            android:layout_width="225dp"
            android:layout_height="90dp"
            android:layout_below="@+id/locationcard"
            android:layout_toEndOf="@+id/emailcard"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imgcall"
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/call_now" />

            <TextView
                android:id="@+id/txtcall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="12dp"
                android:fontFamily="monospace"
                android:text="Call:"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="46dp"
                android:fontFamily="monospace"
                android:text="+91-9876543210"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
        <EditText
            android:id="@+id/etname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Name"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:layout_below="@+id/emailcard"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:backgroundTint="@color/white"/>
        <EditText
            android:id="@+id/etmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Mail"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/etname"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:backgroundTint="@color/white"/>
        <EditText
            android:id="@+id/eturno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Contact No."
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:inputType="phone"
            android:layout_below="@+id/etmail"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:backgroundTint="@color/white"/>
        <EditText
            android:id="@+id/etsubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Subject"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:layout_below="@+id/eturno"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:backgroundTint="@color/white"/>
        <EditText
            android:id="@+id/etmessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Message"
            android:textAlignment="gravity"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="15dp"
            android:padding="20dp"
            android:layout_below="@+id/etsubject"
            android:textColorHint="@color/black"
            android:background="@color/white"
            android:backgroundTint="@color/white"/>
        <Button
            android:id="@+id/btnmsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Message"
            android:layout_below="@+id/etmessage"
            android:layout_marginHorizontal="100dp"
            android:layout_marginTop="15dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="70dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_marginHorizontal="25dp"
            android:text="©Copyright Farmer's Portal. All Rights Reserved Developed By AVSS private Ltd."
            android:layout_below="@id/btnmsg"/>

    </RelativeLayout>
    </ScrollView>
</FrameLayout>