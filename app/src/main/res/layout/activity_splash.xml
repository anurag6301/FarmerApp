<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient"
    tools:context=".SplashActivity">
    <ImageView
        android:id="@+id/imgfarmerslogo"
        android:layout_width="210dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/farmerlogo"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/txtfarmersapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textSize="26dp"
        android:fontFamily="casual"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imgfarmerslogo"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="250dp"
        android:text="Designed By: SAAKA"
        android:textSize="18sp"
        android:layout_below="@id/txtfarmersapp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>